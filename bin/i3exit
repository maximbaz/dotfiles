#!/bin/bash

before_lock() {
  playerctl -a pause
  xkb-switch -s us
  py3-cmd refresh xkb_layouts
  killall compton
  usbguard set-parameter InsertedDevicePolicy reject
  sudo systemctl stop pcscd.service
}

after_lock() {
  usbguard set-parameter InsertedDevicePolicy apply-policy
  compton & disown
}

case "$1" in
  lock)
    before_lock
    xsecurelock
    after_lock
    ;;
  logout)
    i3-msg exit
    ;;
  suspend)
    before_lock
    systemctl suspend
    xsecurelock
    after_lock
    ;;
  reboot)
    systemctl reboot
    ;;
  shutdown)
    systemctl poweroff
    ;;
  *)
    echo "Usage: $0 {lock|logout|suspend|reboot|shutdown}"
    exit 2
esac

exit 0
