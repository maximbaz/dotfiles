#!/bin/sh

marker="${XDG_CACHE_HOME:-$HOME/.cache}/waybar-eyes"
eyes=""

run() {
    while true; do
        printf '{"text": "%s"}\n' "$(echo "$eyes" | xargs)"
        touch "$marker"
        inotifywait -t 900 -q -e delete_self "$marker"
        [ "${#eyes}" -lt 10 ] && eyes="$eyes ÔÅÆ"
        [ ! -f "$marker" ] && eyes=""
    done
}

[ "$1" = "done" ] && rm "$marker" || run
