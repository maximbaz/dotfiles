#!/bin/sh

menu=$(printf "firefox\nqutebrowser\nchromium\ncopy to clipboard\nplay" | dmenu -p browser)

case $menu in
    "firefox")
        firefox "$@" &
        ;;
    "qutebrowser")
        qutebrowser "$@" &
        ;;
    "chromium")
        chromium "$@" &
        ;;
    "copy to clipboard")
        echo "$@" | wl-copy
        ;;
    "play")
        mpv "$@" &
        ;;
esac
