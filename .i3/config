exec_always --no-startup-id "pgrep -x unclutter || (unclutter &)"
exec_always --no-startup-id "pgrep -x copyq || (copyq &)"
exec_always --no-startup-id "pgrep -x thunderbird || (thunderbird &)"
exec_always --no-startup-id "pgrep -x wire-desktop || (wire-desktop &)"
exec_always --no-startup-id "pgrep -x udiskie || (udiskie --smart-tray &)"
exec_always --no-startup-id "pgrep -x usbguard-applet || (usbguard-applet-qt &)"
